{% extends 'base.html.twig' %}

{% block title %}{{ data.name.common }}{% endblock %}

{% block body %}

    <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center space-between">
        {% for name in data.name %}
            <div class="card m-3" style="width: 18rem;">
                <img class="border border-dark" src="{{ data.flags.png }}">
                <div class="card-body text-center">
                    <h3>{{ data.name.common }}</h3>
                    <p class="fw-light">{{ data.capital.0 }}</p>
                    <p><span class="badge bg-danger">{{ data.population }} habitants</span></p>
                </div>
            </div>

        {% endfor %}
    </div>

{% endblock %}